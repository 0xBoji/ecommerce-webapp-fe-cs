<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Arts - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ecommerce_webapp_fe_cs.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (string.IsNullOrEmpty(Context.Session.GetString("UserEmail")))
                {
                    <a style="text-decoration: none;" href="@Url.Action("LoginAdmin", "Admin")">Login</a>
                }
                else
                {
                    <a style="text-decoration: none;" href="@Url.Action("Index", "Admin")">Index</a>
                    <a style="text-decoration: none;" href="@Url.Action("ShowList", "Admin")">Products</a>
                    <a style="text-decoration: none;" href="@Url.Action("ShowNegotiations", "Admin")">Negotiations</a>
                    <a style="text-decoration: none;" href="@Url.Action("ShowBlogs", "Admin")">Blogs</a>

                    <form asp-controller="Admin" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger info circle" style="margin:10px 0px 10px 42px;">Logout</button>
                    </form>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
