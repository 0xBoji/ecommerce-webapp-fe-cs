<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>Arts - Admin Dashboard</title>

    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png" />
    <link href="~/assets/vendor/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/chartist/css/chartist.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <!--Preloader-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <!-- Main wrapper -->
    <div id="main-wrapper">
        @if (Context.Session.GetString("UserEmail") != null)
        {
            <!-- Nav header -->
            <div class="nav-header">
                <a href="@Url.Action("Index", "Admin")" class="brand-logo">
                    <img class="logo-abbr" src="~/assets/images/logo.png" />
                    <img class="logo-compact" src="~/assets/images/logo-text.png" />
                    <img class="brand-title" src="~/assets/images/logo-text.png" />
                </a>
                <div class="nav-control">
                    <div class="hamburger">
                        <span class="line"></span><span class="line"></span><span class="line"></span>
                    </div>
                </div>
            </div>

            <!-- Header -->
            <div class="header">
                <div class="header-content">
                    <nav class="navbar navbar-expand">
                        <div class="collapse navbar-collapse justify-content-between">
                            <div class="header-left">
                                <div class="search_bar dropdown">
                                    <span class="search_icon p-3 c-pointer" data-toggle="dropdown"><i class="mdi mdi-magnify"></i></span>
                                    <div class="dropdown-menu p-0 m-0">
                                        <form>
                                            <input class="form-control" type="search" placeholder="Search" aria-label="Search" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>

            <!-- Sidebar start -->
            <div class="quixnav">
                <div class="quixnav-scroll">
                    <ul class="metismenu" id="menu">
                        <li class="nav-label first">Main Menu</li>
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon icon-single-04"></i><span class="nav-text">Dashboard</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a href="@Url.Action("Index", "Admin")">Index</a></li>
                                <li><a href="@Url.Action("ShowList", "Admin")">Products</a></li>
                                <li><a href="@Url.Action("ShowNegotiations", "Admin")">Negotiates</a></li>
                                <li><a href="@Url.Action("ShowBlogs", "Admin")">Blogs</a></li>
                                <li>
                                    @if (string.IsNullOrEmpty(Context.Session.GetString("UserEmail")))
                                    {
                                        <a class="genric-btn info circle" href="@Url.Action("LoginAdmin", "Admin")">Login</a>
                                    }
                                    else
                                    {
                                        <form asp-controller="Admin" asp-action="Logout" method="post">
                                            <button type="submit" class="btn btn-success info circle" style="margin:10px 0px 10px 42px; border:none; 
                                                color:#878a9e; background-color:#353b5e;">Logout
                                            </button>
                                        </form>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">You must be an admin and logged in to see this content.</div>
            <!-- Provide a link or button to go to the login page -->
            <a class="btn btn-primary" style="margin: 250px 0 0 700px;" href="@Url.Action("LoginAdmin", "Admin")">Go to Login Page</a>
        }

        <div>
            @RenderBody()
        </div>

        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", required: false)
        }
    </div>

    <!-- Scripts -->
    <!-- Required vendors -->
    <script src="~/assets/vendor/global/global.min.js" ></script>
    <script src="~/assets/js/quixnav-init.js" ></script>
    <script src="~/assets/js/custom.min.js" ></script>
    <script src="~/assets/vendor/chartist/js/chartist.min.js" ></script>
    <script src="~/assets/vendor/moment/moment.min.js" ></script>
    <script src="~/assets/vendor/pg-calendar/js/pignose.calendar.min.js" ></script>
    <script src="~/assets/js/dashboard/dashboard-2.js" ></script>

</body>
</html>

