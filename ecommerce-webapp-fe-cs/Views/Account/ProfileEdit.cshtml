@model ecommerce_webapp_fe_cs.Models.AccountModels.ProfileEditModel

@{
	Layout = "_LayoutStore";
}

<style type="text/css">
	body {
		margin-top: 20px;
		text-align: left;
	}

	.main-body {
		padding: 25px;
		background-color: #e2e8f0;
		padding-bottom: 6rem;
		padding-top: 4rem;
	}

	.card {
		box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
	}

	.card {
		position: relative;
		display: flex;
		flex-direction: column;
		min-width: 0;
		word-wrap: break-word;
		background-color: #fff;
		background-clip: border-box;
		border: 0 solid rgba(0,0,0,.125);
		border-radius: .25rem;
	}

	.card-body {
		flex: 1 1 auto;
		min-height: 1px;
		padding: 1rem;
	}

	.gutters-sm {
		margin-right: -8px;
		margin-left: -8px;
	}

		.gutters-sm > .col, .gutters-sm > [class*=col-] {
			padding-right: 8px;
			padding-left: 8px;
		}

	.mb-3, .my-3 {
		margin-bottom: 1rem !important;
	}

	.bg-gray-300 {
		background-color: #e2e8f0;
	}

	.h-100 {
		height: 100% !important;
	}

	.shadow-none {
		box-shadow: none !important;
	}

	.mb-0 {
		font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
		font-size: 1rem;
		font-weight: 500;
		line-height: 1.2;
		padding-left: 10px
	}

	.input {
		width: 60%;
		height: 32px;
		border-radius: 8px;
		border: 2px solid;
	}

</style>

<div class="container">
	<div class="main-body">
		<div class="row gutters-sm">
			<div class="col-md-8" style="margin-left:18%">
				<div class="card mb-3">
					<div class="card-body">
						<form asp-action="ProfileEdit" method="post" enctype="multipart/form-data">
							<div asp-validation-summary="ModelOnly" style="color: red;font-weight: bolder;padding-left: 30px;padding-bottom: 10px;"></div>
							<div class="row" style="padding-top:2rem;">
								<div class="col-sm-3">
									<h6 class="mb-0">UserName</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="Username" asp-for="Username" class="input" required value="@Model.Username">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">FirstName</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="FirstName" asp-for="FirstName" class="input" required value="@Model.FirstName">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">LastName</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="LastName" asp-for="LastName" class="input" required value="@Model.LastName">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">PhoneNumber</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="PhoneNumber" asp-for="PhoneNum" class="input" required value="@Model.PhoneNum">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Avatar</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="file" name="UserImg" accept=".jpg, .jpeg, .png" required />
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">CompanyName</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="CompanyName" asp-for="CompanyName" class="input" required value="@Model.CompanyName">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">AddressLine1</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="AddressLine1" asp-for="AddressLine1" class="input" required value="@Model.AddressLine1">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">AddressLine2</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="AddressLine2" asp-for="AddressLine2" class="input" required value="@Model.AddressLine2">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Country</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="Country" asp-for="Country" class="input" required value="@Model.Country">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Province</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="Province" asp-for="Province" class="input" value="@Model.Province">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">City</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="City" asp-for="City" class="input" required value="@Model.City">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">PostalCode</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" placeholder="PostalCode" asp-for="PostalCode" class="input" required value="@Model.PostalCode">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-9 text-secondary" style="padding-bottom:2rem; margin-left:40%">
									<button type="submit" class="genric-btn info radius">Save</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>